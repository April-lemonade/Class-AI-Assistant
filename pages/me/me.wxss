  width: 514rpx;
  height: 514rpx;
  opacity: 1;
  border-radius: 60rpx;
  background: rgba(29, 245, 198, 0.6);
  filter: blur(120rpx);

}

.block2 {
  left: -74rpx;
  top: -214rpx;
  width: 817rpx;
  height: 817rpx;
  opacity: 1;
  border-radius: 60rpx;
