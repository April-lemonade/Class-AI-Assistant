/* pages/me/me.wxss */
.container {
  position: relative;
  height: calc(100vh - 66rpx);
  min-height: calc(100vh - 66rpx);
  overflow: hidden;
  background-color: rgba(97, 179, 255, 0.1);
  /* 确保子元素不会超出容器 */
}

.top {
  position: relative;
  left: 0rpx;
  top: -40rpx;
  width: 750rpx;
  height: 520rpx;
  opacity: 1;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.06);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-self: center;
  align-items: center;
}

.background-block {
  position: absolute;
  border-radius: 50%;
  /* 如果你想要圆形背景块 */
  filter: blur(120px);
  /* 如果需要模糊效果 */
}

.block1 {
  left: 584rpx;
