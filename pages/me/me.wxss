.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  /* 确保背景在最底层 */
}

.content {
  height: 100%;
  position: relative;
  z-index: 2;
  padding-top: 10%;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  gap:5%
}

.t-grid-item__image:not(:empty).t-grid-item__image--middle{
  justify-content: center;
  align-items: center;
  display: flex;
}