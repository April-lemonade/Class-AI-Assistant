.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 1;
  /* 确保背景在最底层 */
}

.content {
  position: relative;
  z-index: 2;
  padding-bottom: 15%;
  /* 确保内容在背景之上 */
}

.t-input__control {
  width: 483rpx !important;
  height: 56rpx !important;
  display: block;
  box-sizing: border-box;
  width: 60vw;
  min-width: 0;
  min-height: 48rpx;
  margin: 0;
  padding: 0 5% !important;
  color: var(--td-input-default-text-color, var(--td-text-color-primary, var(--td-font-gray-1, rgba(0, 0, 0, 0.9))));
  line-height: inherit;
  border-radius: 55px !important;
  background: rgba(245, 248, 252, 1) !important;
  border: 0;
  resize: none;
  font-size: 18rpx !important;
}

.t-tabs__item--active {
  font-weight: 600;
  color: var(--td-tab-item-active-color, var(--td-brand-color, var(--td-primary-color-7, #0052d9)));
  font-size: 60rpx !important;
}

.t-tabs__item--disabled .t-tabs__item-inner--tag {
  background: linear-gradient(90deg, rgba(127, 192, 253, 1) 0%, rgba(72, 245, 207, 1) 100%);
}

.t-tabs__item-inner--tag{
  border-radius: 30rpx !important;
  font-size: 26rpx !important;
  width: 150rpx !important;
  padding: 0 !important;
  font-weight: normal;
}

.nav .t-tabs__item-inner--tag{
  border-radius: 30rpx !important;
  font-size: 35rpx !important;
  width: 150rpx !important;
  padding: 0 !important;
  font-weight: normal;
  color: rgba(51, 51, 51, 0.7) !important;
  font-weight: 400;
}

.nav .t-tabs__item-inner--active.t-tabs__item-inner--tag{
  color: rgba(51, 51, 51, 1) !important;
  font-weight: 600;
  font-size: 40rpx !important;
}


.ops .t-tabs__item-inner--active.t-tabs__item-inner--tag {
  border: solid 1rpx var(--td-brand-color);
}