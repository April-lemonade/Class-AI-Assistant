.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  /* 确保背景在最底层 */
}

.content {
  position: relative;
  z-index: 2;
  padding: 0% 0%;
  /* justify-content: center; */
  /* 确保内容在背景之上 */
}

.notification {
  margin-left: 5%;
  position: relative;
  /* left: 60rpx; */
  /* top: 408rpx; */
  z-index: 0;
  margin-top: -20%;
  width: 80%;
  /* height: 1248rpx; */
  padding: 10% 5%;
  /* opacity: 1; */
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 16rpx rgba(0, 0, 0, 0.06);

}

.divider {
  height: 1rpx;
  background-color: rgba(245, 245, 245, 1);
  /* 灰色分割线 */
  margin: 10px 0;
}

.detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  color: rgba(0, 0, 0, 1);
  font-size: 28rpx;
  font-weight: 400;
  
}

.allInfo {
  display: flex;
  flex-direction: row;
  width: 80%;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 3%;
  box-shadow: 0rpx 6rpx 16rpx rgba(0, 0, 0, 0.06);
}