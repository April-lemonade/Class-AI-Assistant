.container {
  position: relative;
  height: calc(100vh - 66rpx);
  min-height: calc(100vh - 66rpx);
  /* overflow: hidden; */
  overflow-x: hidden;
  /* 确保子元素不会超出容器 */
}

.background-block {
  position: absolute;
  border-radius: 50%;
  /* 如果你想要圆形背景块 */
  filter: blur(120px);
  /* 如果需要模糊效果 */
}

