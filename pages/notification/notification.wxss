/* pages/notification/notification.wxss */
.container {
  position: relative;
  height: calc(100vh - 66rpx);
  min-height: calc(100vh - 66rpx);
  overflow-x: hidden;
  overflow-y: scroll;
  background-color: rgba(255, 255, 255, 1);
  /* 确保子元素不会超出容器 */
}

.cells{
  border-radius: 40rpx;
  box-shadow: 0px 4px 30px  rgba(0, 48, 102, 0.1);
}

.background-block {
  position: absolute;
  border-radius: 50%;
  /* 如果你想要圆形背景块 */
  filter: blur(120px);
  /* 如果需要模糊效果 */
}

.block1 {
  width: 710rpx;
  height: 710rpx;
  background-color: rgba(29, 245, 198, 0.1);
  top: -149rpx;
  left: -42rpx;
}

.block2 {
  width: 1107rpx;
  height: 1107rpx;
  background-color: rgba(97, 179, 255, 0.12);
  top: 578rpx;
  left: -170rpx;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140%;
  z-index: 1;
  /* 确保背景在最底层 */
}

.content {
  position: relative;
  z-index: 2;
  padding: 5% 0;
  margin-bottom: 10%;
  /* 确保内容在背景之上 */
}